<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image"
        android:text="@string/price_info"
        android:textColor="#000" />

    <TextView
        android:id="@+id/btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/image"
        android:text="BTC"
        android:textColor="#000" />

    <TextView
        android:id="@+id/btcPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/btc"
        android:text="10000"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/eth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/btcPrice"
        android:text="ETH"
        android:textColor="#000" />

    <TextView
        android:id="@+id/ethPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/eth"
        android:text="10000"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btc"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/image"
        android:text="ETC"
        android:textColor="#000" />

    <TextView
        android:id="@+id/etcPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btc"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@id/etc"
        android:text="10000"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/xrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/eth"
        android:layout_marginEnd="4dp"
        android:layout_toEndOf="@id/etcPrice"
        android:text="XRP"
        android:textColor="#000" />

    <TextView
        android:id="@+id/xrpPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btc"
        android:layout_toEndOf="@id/xrp"
        android:text="10000"
        android:textColor="#666666" />
</RelativeLayout>